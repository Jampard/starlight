---
import { Image } from 'astro:assets';

interface Props {
	handle: string;
	name: string;
	content?: string;
	avatar: string;
}

const { content, name, handle, avatar } = Astro.props;
---

<article class="testimonial">
	<div class="testimonial-heading">
		<Image class="avatar" height="50" width="50" src={avatar} alt="image" />
		<div class="testimonial-title">
			<p class="title">
				{name}
			</p>
			<span class="handle">
				@{handle}
			</span>
		</div>
	</div>
	<div class="testimonial-body">
		{content}
		<slot />
	</div>
</article>

<style>
	.testimonial-heading {
		display: flex;
		gap: 1rem;
		flex-direction: row;
		align-items: start;
		justify-items: start;
	}
	.avatar {
		border-radius: 9999px;
	}
	.testimonial .testimonial-title {
		margin-top: 0;
	}
	.title {
		font-weight: 600;
		font-size: var(--sl-text-h4);
		color: var(--sl-color-white);
		line-height: var(--sl-line-height-headings);
	}
	.handle {
		gap: 0.1rem;
		color: var(--sl-color-gray);
	}
	.testimonial {
		--sl-card-border: var(--sl-color-purple);
		--sl-card-bg: var(--sl-color-purple-low);
		border: 1px solid var(--sl-color-gray-5);
		background-color: var(--sl-color-black);
		padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
		flex-direction: column;
		gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
	}
	/* .testimonial .icon {
		border: 1px solid var(--sl-card-border);
		background-color: var(--sl-card-bg);
		padding: 0.2em;
		border-radius: 0.25rem;
	} */
	.testimonial .body {
		margin: 0;
		font-size: clamp(var(--sl-text-sm), calc(0.5rem + 1vw), var(--sl-text-body));
	}
</style>
